        <CheckBox x:Name="Check_Broccoli" Checked="Checked_Broccoli"  Unchecked="Checked_Broccoli" Content="Broccoi" Grid.Column="1" HorizontalAlignment="Left" Margin="20,39,0,0" Grid.Row="1" VerticalAlignment="Top" IsChecked="True" Visibility="Hidden"/>
        <CheckBox x:Name="Check_Mushrooms" Checked="Checked_Mushrooms" Unchecked="Checked_Mushrooms" Content="Mushrooms" Grid.Column="1" HorizontalAlignment="Left" Margin="146,39,0,0" Grid.Row="1" VerticalAlignment="Top" IsChecked="True" Visibility="Hidden"/>
        <CheckBox x:Name="Check_Tomato_Omelette" Checked="Checked_Tomato_Omelette" Unchecked="Checked_Tomato_Omelette" Content="Tomato" Grid.Column="1" HorizontalAlignment="Left" Margin="20,67,0,0" Grid.Row="1" VerticalAlignment="Top" IsChecked="True" Visibility="Hidden"/>
        <CheckBox x:Name="Check_Cheddar" Checked="Checked_Cheddar"  Content="Cheddar" Unchecked="Checked_Cheddar" Grid.Column="1" HorizontalAlignment="Left" Margin="146,67,0,0" Grid.Row="1" VerticalAlignment="Top" IsChecked="True" Visibility="Hidden"/>
