        <TextBlock HorizontalAlignment="Left" Text="Comes With:" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" FontSize="18" FontWeight="Bold" Height="20" FontFamily="Cooper Black" Grid.Column="1" Margin="10,549,0,0" Grid.RowSpan="2"/>
